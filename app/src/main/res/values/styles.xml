<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="background">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlayWhite" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleWhite</item>
        <item name="subtitleTextAppearance">@style/AppTheme.Toolbar.SubtitleWhite</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Toolbar.TitleTransparent" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/dimen_font_size_large</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:layout_marginStart">-10dp</item>
        <item name="android:fontFamily">@font/font_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="titleTextColor">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.MenuItemTheme" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/dimen_font_size_normal</item>
        <item name="android:fontFamily">@font/font_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="MenuItemsStyle">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/colorSecondary</item>
        <item name="itemTextColor">@color/colorSecondary</item>
        <item name="itemBackground">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/colorGreyLv2</item>z
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="elevation">4dp</item>
        <item name="cornerSize">10dp</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="FullscreenTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FullscreenTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorBgWindow</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_white_round_with_stroke</item>
        <item name="android:singleLine">false</item>
        <item name="android:editable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColorHint">@color/colorGreyLv2</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily">@font/font_primary_bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/dimen_font_size_normal</item>
    </style>

</resources>


